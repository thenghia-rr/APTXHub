@model List<Hashtag>

<div class="flex justify-between text-black">
    <h3 class="font-bold text-xl">Trends for you</h3>
</div>

<div class="space-y-3.5 capitalize text-xs font-normal mt-5 mb-2 text-gray-600">

    @foreach (var hashtag in Model)
    {
        <a>
            <div class="flex items-center gap-3 p">
                <div class="flex-1 mb-2">
                    <h2 class="font-semibold text-black text-14">@hashtag.Name</h2>
                    <div class="mt-1 mb-2 text-13">@hashtag.Count posts</div>
                </div>
            </div>

        </a>
    }
</div>