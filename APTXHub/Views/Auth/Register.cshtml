@model RegisterVM;

<div class="sm:flex">
     
    @*form section*@
    <div class="relative lg:w-[580px] md:w-96 w-full p-10 min-h-screen bg-white shadow-xl flex items-center pt-10 z-10">
        

        <div class="w-full lg:max-w-sm mx-auto space-y-10">

            <div>
                <h2 class="text-3xl font-semibold mb-1.5">Sign up</h2>
                <p class="text-base text-gray-700 font-normal">If you already have an account, <a asp-controller="Auth" asp-action="Login" class="text-blue-700">Login here!</a></p>
            </div>

            <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-7 text-sm text-black font-medium">

                <div class="grid grid-cols-2 gap-4 gap-y-7">
                    <div class="col-span-2 text-red-500" asp-validation-summary="ModelOnly"></div>

                    <div>
                        <label for="firstName">First name</label>
                        <div class="mt-2.5">
                            <input asp-for="FirstName" type="text" placeholder="First name" required="" class="!w-full" />
                            <span asp-validation-for="FirstName" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>
                    <div>
                        <label for="lastName">Last name</label>
                        <div class="mt-2.5">
                            <input asp-for="LastName"  type="text" placeholder="Last name" required="" class="!w-full" />
                            <span asp-validation-for="LastName" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>
                    <div class="col-span-2">
                        <label for="email">Email address</label>
                        <div class="mt-2.5">
                            <input asp-for="Email" type="email" placeholder="Email" required="" class="!w-full" />
                            <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>
                    <div>
                        <div class="mt-2.5">
                            @* <input asp-for="Password" type="password" placeholder="***" required="" class="!w-full" /> *@
                            <div>
                                <label asp-for="Password">Password</label>
                                <div class="mt-2.5 relative">
                                    <input asp-for="Password" id="password" type="password" placeholder="***" required class="!w-full pr-10" />
                                    <button type="button" id="togglePassword" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
                                        <ion-icon name="eye-outline" id="togglePasswordIcon"></ion-icon>
                                    </button>
                                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 absolute -bottom-5"></span>
                                </div>
                            </div>

                            <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>

                    <div>
                        <div class="mt-2.5">
                            @* <input asp-for="ConfirmPassword" type="password" placeholder="***" required="" class="!w-full" /> *@
                            <div>
                                <label asp-for="ConfirmPassword">Confirm password</label>
                                <div class="mt-2.5 relative">
                                    <input asp-for="ConfirmPassword" id="confirmPassword" type="password" placeholder="***" required class="!w-full pr-10" />
                                    <button type="button" id="toggleConfirmPassword" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
                                        <ion-icon name="eye-outline" id="toggleConfirmIcon"></ion-icon>
                                    </button>
                                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 absolute -bottom-5"></span>
                                </div>
                            </div>

                            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>

                    <div class="col-span-2">
                        <button type="submit" class="button bg-primary text-white w-full">Register</button>
                    </div>

                </div>

                <div class="text-center flex items-center gap-6">
                    <hr class="flex-1 border-slate-200">
                    Or continue with
                    <hr class="flex-1 border-slate-200">
                </div>

                <div class="flex gap-2">
                    <a href="#" class="button flex-1 flex items-center gap-2 bg-primary text-white text-sm"> <ion-icon name="logo-google" class="text-lg"></ion-icon> google </a>
                    <a href="#" class="button flex-1 flex items-center gap-2 bg-black text-white text-sm"><ion-icon name="logo-github" class="text-lg"></ion-icon> github </a>
                </div>
            </form>
        </div>
    </div>

    @*image slider*@
    <div class="flex-1 relative bg-primary max-md:hidden">
        <div class="relative w-full h-full" tabindex="-1" uk-slideshow="animation: slide; autoplay: true">

            <ul class="uk-slideshow-items w-full h-full">
                <li class="w-full">
                    <img src="~/images/welcome/welcome-07.jpeg" alt="" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 600,0,0">Connect with Friends</h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;">Bridge the gap between miles and moments—connect with friends and weave memories together, one click at a time.</p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
                <li class="w-full">
                    <img src="~/images/welcome/welcome-05.png" alt="" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-tr ansition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 800,0,0">  Connect With Friends </h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;"> Rekindle old ties and spark new ones—your next 'Remember when...' moment is just a friend request away.</p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
            </ul>

            <!-- slide nav -->
            <div class="flex justify-center">
                <ul class="inline-flex flex-wrap justify-center  absolute bottom-8 gap-1.5 uk-dotnav uk-slideshow-nav"> </ul>
            </div>

        </div>
    </div>
</div>

<script>
    // Toggle show password and cfPassword
    function setupPasswordToggle(inputId, buttonId, iconId) {
        const input = document.getElementById(inputId);
        const toggleBtn = document.getElementById(buttonId);
        const icon = document.getElementById(iconId);

        toggleBtn.addEventListener("click", () => {
            const isVisible = input.type === "text";
            input.type = isVisible ? "password" : "text";
            icon.name = isVisible ? "eye-outline" : "eye-off-outline";
        });
    }

    setupPasswordToggle("password", "togglePassword", "togglePasswordIcon");
    setupPasswordToggle("confirmPassword", "toggleConfirmPassword", "toggleConfirmIcon");
</script>
